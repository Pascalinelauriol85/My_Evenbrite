<!-- Message d'alerte -->

   <% if flash[:messages] %>
    <div class="container p-1 text-center alert  alert-danger" role="alert">
      <p>Nous n'avons pas réussi à actualiser ton profil :</p>
      <ul>
        <% flash[:messages].each do |message| %>
          <li><%=message%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Formulaire -->

<%= form_for @user do |f| %>

   <div class="form-group">
       <label> Prénom : </label>
       <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label> Nom : </label>
       <%= f.text_area :last_name, class: 'form-control' %>
    </div>

  
    <div class="form-group">
      <label> Description : </label>
       <%= f.text_area :description, class: 'form-control' %>
    </div>

<div class="form-group">
      <label> Email : </label>
       <%= f.text_area :email, class: 'form-control' %>
    </div>

    <div class="form-group">
       <button type="submit" id="yellow-button"> actualise ton profil </button>
    </div>

<%end%>